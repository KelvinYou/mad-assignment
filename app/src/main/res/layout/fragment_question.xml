<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionFragment">

    <EditText
        android:id="@+id/quesInputTitle"
        android:layout_width="400dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/custom_input1"
        android:ems="10"
        android:hint="  Title"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/quesBody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesDesTitle"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/quesInputBody"
        android:layout_width="395dp"
        android:layout_height="134dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_input1"
        android:ems="10"
        android:hint="  Body"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/quesTags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesDesBody"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/quesInputTags"
        android:layout_width="394dp"
        android:layout_height="30dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/custom_input1"
        android:ems="10"
        android:hint="  Tags"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnQuesReview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesDesTags"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnQuesPost"
        android:layout_width="89dp"
        android:layout_height="37dp"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/custom_button"
        android:text="Post"
        app:layout_constraintBottom_toBottomOf="@+id/btnQuesReview"
        app:layout_constraintEnd_toStartOf="@+id/btnQuesReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnQuesReview" />

    <Button
        android:id="@+id/btnQuesReview"
        android:layout_width="95dp"
        android:layout_height="38dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:text="Review"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnQuesPost"
        app:layout_constraintTop_toBottomOf="@+id/quesInputTags" />

    <TextView
        android:id="@+id/quesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="8dp"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/quesDesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesHeader" />

    <TextView
        android:id="@+id/quesDesTitle"
        android:layout_width="398dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="6dp"
        android:text="Be specific and imagine youâ€™re asking a question to another person"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/quesInputTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesTitle" />

    <TextView
        android:id="@+id/quesBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="8dp"
        android:text="Body"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/quesDesBody"
        app:layout_constraintStart_toStartOf="@+id/quesInputTitle"
        app:layout_constraintTop_toBottomOf="@+id/quesInputTitle" />

    <TextView
        android:id="@+id/quesDesBody"
        android:layout_width="393dp"
        android:layout_height="41dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="13dp"
        android:text="Include all the information someone would need to answer your question"
        app:layout_constraintBottom_toTopOf="@+id/quesInputBody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesBody" />

    <TextView
        android:id="@+id/quesTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="10dp"
        android:text="Tags"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/quesDesTags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesInputBody" />

    <TextView
        android:id="@+id/quesDesTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Describe what your question is about"
        app:layout_constraintBottom_toTopOf="@+id/quesInputTags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesTags" />

    <TextView
        android:id="@+id/quesHeader"
        android:layout_width="206dp"
        android:layout_height="29dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/custom_input"
        android:text="Ask a public question"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/quesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>