<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/titleCommentDisplay"
        android:layout_width="367dp"
        android:layout_height="438dp"
        android:layout_marginTop="33dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInstru"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/title_comment_display" />

    <TextView
        android:id="@+id/tvInstru"
        android:layout_width="366dp"
        android:layout_height="31dp"
        android:text="View all your replies here."
        android:textAlignment="center"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="95dp" />

</androidx.constraintlayout.widget.ConstraintLayout>